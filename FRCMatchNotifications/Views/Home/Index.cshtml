@model FRCMatchNotifications.Models.HomeModel

@{
    ViewBag.Title = "Home Page";
}

@if (String.IsNullOrEmpty(Model.Number) && String.IsNullOrEmpty(Model.Team))
{
    <div class="jumbotron">
        <h1>FRC Notifications</h1>
        <p class="lead">Want to get near-realtime notifications for your favorite FRC team(s)? Enter your phone number and the team you want to follow below, and you'll get notifications when their matches start and end.</p>
    </div>

    <div class="row">
        <div class="col">

            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                @Html.TextBoxFor(model => model.Number, new { placeholder = "Enter phone number.", @class = "form-control" })
                @Html.TextBoxFor(model => model.Team, new { placeholder = "Enter team number.", @class = "form-control" })
                <input type="submit" id="btnSubmit" class="btn btn-primary" />
            }
